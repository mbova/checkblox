<h1>My List</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Completed</th>
      <th>Item</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr id="item-<%= item.id %>">
        <td><%= link_to 'Mark Completed', item, method: :delete, remote: true %></td>
        <td><%= link_to "#{item.name}", item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>